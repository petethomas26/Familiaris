{% extends 'templates/app.twig' %}

{% block content %}


    <div class="container-fluid text-center">    
      <div class="row content">
        <div class="col-sm-2 sidenav lower">
            
        </div>
        <div class="col-sm-8 text-left pt-2 bg-success"> 
        	<h4 class="text-white">Send an email to administrator</h4>
        	<hr>

        	<form action="{{ path_for('postContactAdmin') }}" method="post" autocomplete="off">
            
                <fieldset class="form-group">
                    <label for="subject">Subject</label>
                    <input type="text" class="form-control" name="subject" id="subject">
                </fieldset>
                
                <fieldset class="form-group">
                    <label for="message">Message</label>
                    <textarea name="message" rows="10" cols="30" class="form-control" id="message"></textarea>
                </fieldset>
            
                <button type="submit" class="btn btn-primary btn-md mb-2">Send</button>
                {{ csrf.field | raw }}
            </form>
        </div>
      </div>
    </div>



{% endblock %}