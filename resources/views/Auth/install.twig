{% extends 'templates/app.twig' %}

{% block content %}

	<div class="row">
		<div class="col-md-6 col-md-offset-3 pb-2 pt-2 px-2 bg-danger">
			<div class="card">
				<img class="card-img-top" src="{{ base_url() }}/css/gardens.png" height="100"  alt="Card image cap">

	  			<div class="card-img-overlay">
					<p class="card-text text-white">
		   				<span style="font-family:'Great Vibes', serif; font-size:32px;">Familiaris </span>
						<span style="font-size:32px;">Sign up Administrator</span>
					</p>
  				</div>
  				<div>
					<span class="text-danger">The website does not have any administrators. An administrator must sign up before other members can sign up.</span>
  				</div>
  			</div>

			<div class="card">
  				<div class="card-body">
  				
				    <form action="{{ path_for('auth.install') }}" method="post" autocomplete="off">
				    	<div class="form-group{{ validationErrors.name ? ' has-warning' : '' }}">
				    		<label class="form-control-label" for="name">Name (as on registration email)</label>
							<input type="text" name="name" id="name"  placeholder="Jane Doe"value="{{ old.name }}" class="form-control{{ validationErrors.name ? ' form-control-warning' : ''}} form-control-sm">
							<div class="form-control-feedback text-danger">{{ validationErrors.name ? validationErrors.name | first : ''}}
							</div>
				    	</div>
				    	
				    	<div class="form-group{{ validationErrors.email ? ' has-warning' : '' }}">
				    		<label class="form-control-label" for="email">Email (to which registration details were sent)</label>
							<input type="email" name="email" id="email" placeholder="you@domain.com" value="{{ old.email }}" class="form-control{{ validationErrors.email ? ' form-control-warning' : ''}} form-control-sm">
							<div class="form-control-feedback text-danger">{{ validationErrors.email ? validationErrors.email | first : ''}}
							</div>
				    	</div>

				    	<div class="form-group{{ validationErrors.password ? ' has-warning' : '' }}">
				    		<label class="form-control-label" for="password">Password (of your own choice)</label>
							<input type="password" name="password" id="password" class="form-control{{ validationErrors.password ? ' form-control-warning' : ''}} form-control-sm">
							<div class="form-control-feedback text-danger">{{ validationErrors.password ? validationErrors.password | first : ''}}
							</div>
				    	</div>
				    	<div class="form-group{{ validationErrors.password_confirm ? ' has-warning' : '' }}">
				    		<label class="form-control-label" for="password_confirm">Confirm Your Password</label>
							<input type="password" name="password_confirm" id="password_confirm" class="form-control{{ validationErrors.password_confirm ? ' form-control-warning' : ''}} form-control-sm">
							<div class="form-control-feedback text-danger">{{ validationErrors.password_confirm ? validationErrors.password_confirm | first : ''}}
							</div>
				    	</div>
				    	<div class="form-group{{ validationErrors.registration_code ? ' has-warning' : '' }}">
				    		<label class="form-control-label" for="registration_code">Registration Code (as on registration email)</label>
							<input type="text" name="registration_code" id="registration_code" class="form-control{{ validationErrors.registration_code ? ' form-control-warning' : ''}} form-control-sm">
							<div class="form-control-feedback text-danger">{{ validationErrors.registration_code ? validationErrors.registration_code | first : ''}}
							</div>
				    	</div>
				    	
						<button type="submit" class="btn btn-danger">Install</button>

						{{ csrf.field | raw }}
				    </form>
				    
				 </div>
			</div>
		</div>
	</div>

{% endblock %}