{% extends 'templates/app.twig' %}

{% block content %}

	<div class="row">
	
		<div class="col-md-6 col-md-offset-3 pb-2 pt-2 px-2 bg-success">
	
			<div class="card">

	  			<img class="card-img-top" src="{{ base_url() }}/css/gardens.png" height="100px"  alt="Rhododendron Garden">
      
	  			<div class="card-img-overlay">
					<p class="card-text text-white">
		   				<span style="font-family:'Great Vibes', serif; font-size:32px;">Familiaris </span>
						<span style="font-size:32px;">Sign in</span>
					</p>
  				</div>

  			</div>
		
  			<div class="card">
  				<div class="card-body">
  				
				    <form action="{{ path_for('auth.signin') }}" method="post" autocomplete="off">

				    	<div class="form-group{{ blah.email ? ' has-warning' : '' }} row">
				    		<label class="form-control-label col-4" for="email">Email</label>
				    		<div class="col-7">
								<input type="email" name="email" id="email" placeholder="you@domain.com" value="{{ old.email }}" class="form-control{{ blah.email ? ' form-control-warning' : ''}}">
								<div class="form-control-feedback">{{ blah.email ? blah.email | first : ''}}
								</div>
							</div>
				    	</div>
				    	
				    	<div class="form-group{{ blah.password ? ' has-warning' : '' }} row">
				    		<label class="form-control-label col-4" for="password">Password</label>
				    		<div class="col-7">
								<input type="password" name="password" id="password" class="form-control{{ blah.password ? ' form-control-warning' : ''}}">
								<div class="form-control-feedback">{{ blah.password ? blah.password | first : ''}}
								</div>
							</div>
				    	</div>
				    	
						<button type="submit" class="btn btn-success">Sign in</button>

						{{ csrf.field | raw }}
				    </form>
				    
				</div>

			</div>
		
		</div>
		
	</div>

{% endblock %}