{% extends 'templates/app.twig' %}

{% block content %}

<div class="row content">
	<div class="col-md-9 col-md-offset-3 pb-2 bg-primary">
		<div class="card">
			<div class="card-header bg-primary text-white text-center">
				Search Results
				{% if searchTerm is not empty %}
					<span> for '{{searchTerm}}'</span>
				{% endif %}

			</div>
			
			{% if nots is not empty %}
				<table class="table table-hover">
				  	<thead>
					    <tr>
					      <th>Date</th>
					      <th>From</th>
					      <th>Heading
					      <th>Notice</th>
					      <th></th>
					    </tr>
				  	</thead>
				  	<tbody>
						{% for notice in nots|reverse %}
						    <tr>
						    	<td>{{ notice.date|date("d/m/Y") }}</td>
						    	<td>{{ notice.memberName }}</td>
						    	<td>{{ notice.heading }}</td>
						    	<td>{{ notice.notice }}</td>
						    </tr>
			  			{% endfor %}
				   	</tbody>
				</table>
				<hr>
			{% else %}
				<p>No results found.</p>
			{% endif %}

		</div>
  	</div>
</div>


{% endblock %}