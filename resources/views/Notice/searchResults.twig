{% extends 'templates/app.twig' %}

{% block content %}

<div class=" content">
	<div class="col-sm-9">
		<div class="border border-primary" >
			<div class="card">
				<div class="card-header bg-primary">
					<div class="text-white text-center" style="font-size:110%">
						Search Results
						{% if searchTerm is not empty %}
							<span> for '{{searchTerm}}'</span>
						{% endif %}
					
						<a class="btn btn-sm close" type="button" href="{{ path_for('membership') }}">
								<span aria-hidden="true">&times;</span>
						</a>
					</div>
				</div>

				<div class="card-body">
				
					{% if nots is not empty %}
						<table class="table table-hover">
						  	<thead>
							    <tr>
							      <th>Date</th>
							      <th>From</th>
							      <th>Heading</th>
							      <th>Notice</th>
							      <th></th>
							    </tr>
						  	</thead>
						  	<tbody>
								{% for notice in nots|reverse %}
								    <tr>
								    	<td>{{ notice.date|date("d/m/Y") }}</td>
								    	<td>{{ notice.memberName }}</td>
								    	<td>{{ notice.heading }}</td>
								    	<td>{{ notice.notice }}</td>
								    </tr>
					  			{% endfor %}
						   	</tbody>
						</table>
						
					{% else %}
						<p>No results found.</p>
					{% endif %}
				</div>
			</div>
		</div>
  	</div>
</div>


{% endblock %}